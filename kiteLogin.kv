MDScreen:
    name : 'kite'
    MDFloatLayout:
        spacing: 20
        MDLabel:
            font_style:'Subtitle1'
            role:'small'
            text:'Session Ended!'
            pos_hint:{'center_y':0.70}
            halign:'center'
            theme_text_color:'Primary'
        MDLabel:
            font_style:'Body1'
            role:'small'
            text:'[ref=clickable][u]Click Here to Get the Request Token[/u][/ref]'
            markup : True
            on_ref_press: app.open_url('https://kite.zerodha.com/connect/login?api_key=j8xt637urobqdrtb')
            pos_hint:{'center_y':0.65}
            halign:'center'
            theme_text_color:'Primary'
        MDTextField:
            id: access_token
            hint_text: "Request Token"
            multiline: False
            pos_hint : {'center_x':0.5,'center_y':0.5}
            size_hint_x : 0.7
        MDRaisedButton:
            text: "Submit"
            pos_hint : {'center_x':0.5,'center_y':0.4}
            on_release: app.authenticate_(access_token.text)